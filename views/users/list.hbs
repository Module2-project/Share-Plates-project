<div class="container">
    <h1> Users</h1>
    <div class="row">
        {{#each users}}
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{username}}</h5>
                    <p class="card-text">{{email}}</p>
                    <a href="/users/{{id}}" class="btn btn-primary">View</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>