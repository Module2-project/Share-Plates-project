<div class="container mt-3">
    <div class="d-flex flex-column text-center align-items-center gap-2">
        <img class="rounded-circle border" src="{{currentUser.avatar}}" width="100" />
        <div>
            <h4>{{currentUser.username}}</h4>
            <p>{{currentUser.email}}</p>
        </div>
    </div>

    <h2 class="mt-4">Mis Planes</h2>
    {{#if plans}}

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {{#each Planes as |plan|}}
        <div class="col">
            {{> plancard plan=plan}}
        </div>
        {{/each}}
    </div>

    {{else}}
    <p>No tienes libros favoritos aun</p>
    {{/if}}
</div>