<div class="container mt-3">
    <form action="/plans" method="GET" class="row">
        <div class="col-md-4 mb-3">
            <label for="cuisineType" class="form-label">Tipo de Cocina</label>
            <select id="cuisineType" name="cuisineType" class="form-select">
                <option value="">Seleccionar Tipo de Cocina</option>
            {{#each cuisineType as |type|}}
            <option value="{{type}}">{{type}}</option>
            {{/each}}
            </select>
        </div>
        <div class="col-md-4 mb-3">
            <label for="maxPrice" class="form-label">Precio MÃ¡ximo</label>
            <input type="number" id="maxPrice" name="maxPrice" class="form-control">
        </div>
        <div class="col-md-4 mb-3">
            <label for="date" class="form-label">Fecha</label>
            <input type="date" id="date" name="date" class="form-control">
        </div>
        <div class="col-md-12">
            <button type="submit" class="btn btn-outline-primary btn-custom">Filtrar</button>
            <a href="/plans" class="btn btn-secondary ">Limpiar Filtros</a>
        </div>
    </form>



<div class="mt-5">
    <h1 class="mt-4">Planes disponibles</h1>

    {{#if plans}}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {{#each plans as |plan|}}
        <div class="col">
            {{> plancard plan=plan}}
        </div>
        {{/each}}
    </div>
    {{else}}
    <p>No hay resultados con tus filtros actuales</p>
    {{/if}}
</div>


</div>


